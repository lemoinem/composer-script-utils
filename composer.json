{
    "name": "wemakecustom/composer-script-utils",
    "description": "Set of tools for Composer scripts",
    "type": "library",
    "keywords": ["composer"],
    "license": "MIT",
    "authors": [
        {
            "name": "SÃ©bastien Lavoie",
            "email": "seb@wemakecustom.com"
        }
    ],
    "autoload": {
        "psr-4": { "WMC\\Composer\\Utils\\Tests\\": "tests" },
        "psr-4": { "WMC\\Composer\\Utils\\": "src" }
    },
    "require-dev": {
        "composer/composer": "dev-master"
    },
    "suggest": {
        "symfony/yaml": "Enables yaml parsing"
    },
    "scripts": {
        "post-install-cmd": [
            "WMC\\Composer\\Utils\\ConfigFile\\ConfigDir::updateDirs"
        ],
        "post-update-cmd": [
            "WMC\\Composer\\Utils\\ConfigFile\\ConfigDir::updateDirs"
        ]
    },
    "extra": {
        "update-config-dirs": {
            "confs/dist": "confs"
        },
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    }
}
